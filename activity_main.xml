<?xml version="0.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@android:color/background_light"
        android:id="@+id/text_view"
        android:textSize="25sp"/>
</LinearLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="4dp">
    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/clear"
        android:text="C"
        android:onClick="Clear"
        android:background="@drawable/buttoncolor"
        android:textSize="25sp"/>
    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/percent"
        android:text="%"
        android:layout_toRightOf="@id/clear"
        android:background="@drawable/buttoncolor"
        android:textSize="25sp"/>
    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/delete"
        android:text="Del"
        android:layout_toRightOf="@id/percent"
        android:background="@drawable/buttoncolor"
        android:textSize="25sp"/>
    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/divide"
        android:text="/"
        android:layout_toRightOf="@id/delete"
        android:background="@drawable/buttoncolor"
        android:textSize="25sp"/>
    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/seven"
        android:text="7"
        android:layout_below="@id/clear"
        android:background="@drawable/buttoncolor"
        android:textSize="25sp"/>
    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/eight"
        android:text="8"
        android:layout_toRightOf="@id/seven"
        android:layout_below="@id/percent"
        android:background="@drawable/buttoncolor"
        android:textSize="25sp"/>
    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/nine"
        android:text="9"
        android:layout_below="@id/delete"
        android:layout_toRightOf="@id/eight"
        android:background="@drawable/buttoncolor"
        android:textSize="25sp"/>
    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/multiply"
        android:text="X"
        android:layout_below="@id/divide"
        android:layout_toRightOf="@id/nine"
        android:background="@drawable/buttoncolor"
        android:textSize="25sp"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/four"
        android:text="4"
        android:layout_below="@id/seven"
        android:background="@drawable/buttoncolor"
        android:textSize="25sp"/>
    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/five"
        android:text="5"
        android:layout_toRightOf="@id/four"
        android:layout_below="@id/eight"
        android:background="@drawable/buttoncolor"
        android:textSize="25sp"/>
    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/six"
        android:text="6"
        android:layout_below="@id/nine"
        android:layout_toRightOf="@id/five"
        android:background="@drawable/buttoncolor"
        android:textSize="25sp"/>
    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/minus"
        android:text="-"
        android:layout_below="@id/multiply"
        android:layout_toRightOf="@id/six"
        android:background="@drawable/buttoncolor"
        android:textSize="25sp"/>


    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/one"
        android:text="1"
        android:layout_below="@id/four"
        android:background="@drawable/buttoncolor"
        android:textSize="25sp"/>
    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/two"
        android:text="2"
        android:layout_toRightOf="@id/one"
        android:layout_below="@id/five"
        android:background="@drawable/buttoncolor"
        android:textSize="25sp"/>
    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/three"
        android:text="3"
        android:layout_below="@id/six"
        android:layout_toRightOf="@id/two"
        android:background="@drawable/buttoncolor"
        android:textSize="25sp"/>
    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/plus"
        android:text="+"
        android:layout_below="@id/minus"
        android:layout_toRightOf="@id/three"
        android:background="@drawable/buttoncolor"
        android:textSize="25sp"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/doublezero"
        android:text="00"
        android:layout_below="@id/one"
        android:background="@drawable/buttoncolor"
        android:textSize="25sp"/>
    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/zero"
        android:text="0"
        android:layout_toRightOf="@id/doublezero"
        android:layout_below="@id/two"
        android:background="@drawable/buttoncolor"
        android:textSize="25sp"/>
    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/dot"
        android:text="."
        android:layout_below="@id/three"
        android:layout_toRightOf="@id/zero"
        android:background="@drawable/buttoncolor"
        android:textSize="25sp"/>
    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/equal"

        android:text="="
        android:layout_below="@id/plus"
        android:layout_toRightOf="@id/dot"
        android:onClick="Equals"
        android:background="@drawable/buttoncolor"
        android:textSize="25sp"/>
</RelativeLayout>
</LinearLayout>

